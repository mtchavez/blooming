<div class="row">
  <fieldset>
    <legend>New Server</legend>
    <form id="server-form" action="/server" method="post" data-abide>
      <div class="small-4 columns">
        <label for="server_name">Name</label>
        <input type="text" name="name" placeholder="Analytics Bloomd"/>
      </div>

      <div class="small-4 columns input-wrapper">
        <label for="server_host">Host
          <input type="text" name="host" id="server_host" placeholder="ie. 10.0.0.0:1234" required pattern="\b(https?:\/\/)?[-A-Za-z0-9+&@#\/%?=~_|!:,.;]*[-A-Za-z0-9+&@#\/%=~_|]"/>
        </label>
        <small class="error">A valid host is required</small>
      </div>
      <div>
        <button id="server-submit" type="submit" class="small button" style="margin-top:18px">Add server</button>
      </div>
    </form>
  </fieldset>
</div>
<div class="row">
  <div class="large-8 columns">
    <h2>Bloomd Servers</h2>
    <table style="width:100%">
      <thead>
        <tr>
          <th style="width:40%">Location</th>
          <th style="width:40%">Name</th>
          <th style="width:20%">&nbsp;</th>
        </tr>
      </thead>
      <tbody>
        <% @servers.each do |server| %>
          <tr>
            <td><a href="/server/details?host=<%= CGI.escape server.first %>"><%= server.first %></a></td>
            <td><%= server.last %></td>
            <td><a href="/server/remove?host=<%= CGI.escape server.first %>">remove</a></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

